;required
(require 2htdp/image)

;Physical Constants
(define WIDTH-OF-WORLD 200)
 
(define WHEEL-RADIUS 5) ;single point of control
(define WHEEL-DISTANCE (* WHEEL-RADIUS 5))

;Graphical constants the images used in the state of the world
(define WHEEL
  (circle WHEEL-RADIUS "solid" "black"))
(define SPACE
  (rectangle ... WHEEL-RADIUS ... "white"))
(define BOTH-WHEELS
  (beside WHEEL SPACE WHEEL))
(BOTH-WHEELS)